
{{ if _url && !_hidden && _url !== url}}
<li class="w-fit h-fit m-8">
  <a class="text-white text-2xl font-sen lg:text-2xl lg:rounded bg-wych-purple p-2 rounded-xl hover:bg-wych-rose" href="{{ _url }}">
    {{ _title }}
  </a>
</li>
{{ /if }}


<ul>
  {{ for child of _children }}
  <li>
    {{ include "./menu_item.vto" { _url: child?.data?.url, _hidden: child?.data?.hidden, _title: child?.data?.title, _children: child?.data?.children } }}
  </li>
  {{ /for }}
</ul>
