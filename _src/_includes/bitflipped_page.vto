<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
 <title>{{ title }}</title>
 <link rel="stylesheet" href="/tailwind.css" />
 <link rel="stylesheet" href="/bitflipped.css" />
  </head>
  <body class="flex flex-col items-center bg-bf_bg">
  <ul class="text-6xl lg:text-4xl menu w-100% flex flex-row justify-center mt-8">
    {{ if url != "/" }}
    <li class="w-fit h-fit ">
      <a class=" underline p-2 rounded hover:text-primary" href="/">
        Home
      </a>
    </li>
    {{ /if }}
    {{ for item of nav.menu().children }}
      <li>
        {{ include "./bitflipped_menu_item.vto" { item } }}
      </li>
    {{ /for }}
  </ul>

  <section class="flex flex-col items-center w-11/12 lg:w-1/2 h-fit m-4 mt-24 bg-bitflipped">
    <article class="min-h-100 text-5xl/18 lg:text-2xl/10 my-10 font-bold">
    {{ content }}
    </article>
  </section>
    {{ if nav.nextPage(url) }}
    <div class="next text-6xl lg:text-4xl">
    ><a class="underline" href={{nav.nextPage(url).url}}>{{nav.nextPage(url).basename}}.{{nav.nextPage(url).title}}</a>
    </div>
    {{/if}}
  </body>
</html>
