<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
 <title>{{ title }}</title>
 <link rel="stylesheet" href={{css}} />
  </head>
  <body class="flex flex-col items-center bg-white">
  <ul class="menu w-100% flex flex-row justify-center">
    {{ if url != "/" }}
    <li class="w-fit h-fit ">
      <a class="text-xl p-2 rounded hover:text-primary" href="/">
        Home
      </a>
    </li>
    {{ /if }}
    {{ for item of nav.menu().children }}
      <li>
        {{ include "./bitflipped_menu_item.vto" { item } }}
      </li>
    {{ /for }}
  </ul>

  <section class="flex flex-col items-center w-8/12 h-fit m-4 mt-24 bg-bitflipped">
    <article class="md min-h-60 w-1/2">
    {{ content }}
    </article>
  </section>
    {{ if nav.nextPage(url) }}
    <div class="next">
    ><a href={{nav.nextPage(url).url}}>{{nav.nextPage(url).title}}</a>
    </div>
    {{/if}}
  </body>
</html>
